      <div class="card border-primary mb-3" style="max-width: 60rem;">
        <div class="card-header">Pour commencer, je crée mes objets </div>

        <div class="card-body">
          <div class="container">
            <div class="form-group">

              {{form_row(form.titre)}}
              {{form_row(form.description)}}
              {{form_row(form.pcb)}}

              <div class="perissable">
                <label for="">Type d'objet</label>
                <div class="">
                  <button type="button" class="btn second-blue-color color_button">perissable</button>
                  <button type="button" class="btn second-blue-color color_button">non perissable</button>
                </div>
              </div>

              <div class="row">
                <div class="margeButton col-5 ">
                  <button type="submit" class="btn btn-primary"> photos <i class="fas fa-camera"></i> </button>
                </div>
                <div class="col-5">
                  {{form_row(form.photo)}}
                </div>
              </div>
              <div class="col-md-12 text-center">
                <button type="submit" class="btn btn-primary">ENREGISTRER</button>
              </div>

            </div>
          </div>
        </div>
        </nav>
    </section>

    <!-- footer -->
    <footer>

