{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

<!-- Home -->
<section class="support_view">
  <div class="container_view container_full_view">

  {{ form_start(form) }}
    <!-- Reservation dates -->
    <div id="date_reservez_content" class="container_search_article_reservez">
      <div class="date_article_reservez_form">
        <div class="content_date">
          <p class="mt-3 mr-3 ml-3">
            <label for="reservez_form[dateDebut]">Début:</label>
            <!-- <input class="input_date_form input_style" type="date" name="date-start" value="" required> -->
            {{ form_widget(form.dateDebut) }}
          </p>
          <p class="mt-3 mr-3 ml-3">
            <label for="reservez_form[dateFin]">Fin:</label>
            <!-- <input class="input_date_form input_style" type="date" name="date-end" value="" required> -->
            {{ form_widget(form.dateFin) }}
          </p>
        </div>
      </div>
    </div>

    <div class="d-flex justify-content-center">
      <hr>
    </div>

    <!-- Search articles in list -->
    <div class="container_search_article_reservez">
      <div class="search_article_reservez_form" action="index.html" method="post">
        <p id="search_name">
          <label for="Name">Nom de l'article recherché</label>
          <input id="objectSelected" list="listOfObjects" type="text" class="input_style" name="Name" value="" placeholder='ex: "Pelle"'>
          <Datalist id="listOfObjects">
          </Datalist>
        </p>
        <div class="d-flex">
          <p id="icon_x">X</p>
          <p id="search_quantity">
            <label for="quantity">Quantité</label>
            <input id="quantitySelected" type="text" class="input_quantity_article input_style" name="quantity" value="" placeholder="0">
          </p>
        </div>
        <div class="submit_search_article text-center" onClick="addArticleToReservation()">OK</div>
      </div>
    </div>

    <div class="d-flex justify-content-center">
      <hr>
    </div>

    <!-- List of articles chosen with quantities and the possibility to delete them from choice -->
    <div class="table_container" id="tableArticlesList">
      <h4 class="font-weight-bold">Articles choisis</h4>
      <div class="table_container_color">
        <table class="table_articles">
          <thead class="head_table">
            <tr>
              <th>Articles</th>
              <th>Quantitées</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody id="displayListObjectsSelected">
          </tbody>
        </table>
      </div>
    </div>
    <div class="d-flex justify-content-center">
      <!-- <input type="submit" name="button" value="Valider" class="submit_reservez"> -->
      {{ form_row(form.Valider) }}
    </div>

    {{ form_end(form) }}
  </div>
</section>

  {% include 'components/footer.html.twig' %}
{% endblock %}
