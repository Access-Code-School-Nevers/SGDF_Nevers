{% extends 'base.html.twig' %}

{% block title %}Inventaire: ajouter un article{% endblock %}

{% block body %}

  <div class="support_view">
    <div class="container_view">
      <nav class="container_button">
        <div class="card border-primary mb-3" style="max-width: 60rem;">
          <h4> Ajouter des articles </h4>
          <div class="container">
          <div class="form-group">
            {{form_start(form)}}
             <div class="card mb-3 border-0" style="width: 20rem;">

              <div class="my-custom-class-for-errors">
                  {{ form_errors(form) }}
              </div>

              <div class="row">
                <div class="col">
                  <label for="idObjet">Objet</label>
                  <input list="objects" type="text" name="objet">
                  <datalist id="objects">
                  {% for obj in objects %}  // objects provient du controller
                    <option>{{obj.titre}}</option>
                  {% endfor %}
                  </datalist>
                </div>
              </div>
            </div>

           <div class="row inputsaisiarticle">
             <div class="col">
               <span> état </span>
             </div>
             <div class="col">
               <span> quantitées </span>
             </div>
           </div>
           <div class="row inputsaisiarticle">
             <div class="col">
               <span> neuf </span>
             </div>
             <div class="col">
             <input type="text" id="neuf" name="neuf" required
             minlength="0" maxlength="3" size="10">
             </div>
           </div>
           <div class="row inputsaisiarticle">
             <div class="col">
               <span> bon </span>
             </div>
             <div class="col">
               <span> <input type="text" id="bon" name="bon" required
               minlength="0" maxlength="3" size="10"> </span>
             </div>
           </div>
           <div class="row inputsaisiarticle">
             <div class="col">
               <span> moyen </span>
             </div>
             <div class="col">
             <input type="text" id="moyen" name="moyen" required
             minlength="0" maxlength="3" size="10">
             </div>
           </div>
           <div class="row inputsaisiarticle">
             <div class="col">
               <span> defectueux </span>
             </div>
             <div class="col">
             <input type="text" id="defectueux" name="defectueux" required
             minlength="0" maxlength="3" size="10">
             </div>
           </div>
           <div class="row inputsaisiarticle">
            <div class="col">
              <span> incomplet </span>
            </div>
            <div class="col">
            <input type="text" id="incomplet" name="incomplet" required
            minlength="0" maxlength="3" size="10">
            </div>
            </div>
            <div class="scan_articles_resituer">
              <input type="text" name="cab" value="" required>
              <button class="button_scan_restituer " type="button" name="button"><i class="fas fa-barcode"></i></button>
            </div>
            <div class="margeButton ajouter ">
              <button type="submit" class="btn btn-primary pull-right"> AJOUTER </button>
            </div>
              {{form_end(form)}}
            </div>

            </nav>
          </div>

          </div>



<!-- footer -->
<footer>

</footer>
{% endblock %}
