{% extends 'base.html.twig' %}

{% block title %}Ajouter un utilisateur{% endblock %}

{% block body %}

<section class="support_view">
  <div class="container_view">
    <div class="alert alert-secondary mb-5" role="alert">
      <div class="mid-form">
        <div class="text-center"><b>Rôles</b></div>
        <ul>
          <li><b>Administrateur</b> : Gestion des membres, Inventaire, Réservation de matériel</li>
          <li><b>Responsable matériel</b> : Inventaire, Réservation de matériel</li>
          <li><b>Chef</b> : Réservation de matériel</li>
        </ul>
      </div>
    </div>
    <div class="w-100">
      <div class="d-flex justify-content-center mt-4">
        <div class="mid-form">

          {{ form_start(form) }}
            {{ form_row(form.nom) }}
            {{ form_row(form.password) }}
            {{ form_row(form.role) }}

            {{ form_widget(form.save, { 'label': 'Enregistrer' }) }}

            <div class="my-custom-class-for-errors">
              {{ form_errors(form) }}
            </div>
          {{ form_end(form) }}
        </div>
      </div>
    </div>
  </div>
</div>

{% endblock %}
