{% extends 'base.html.twig' %}

{% block title %}Historique{% endblock %}

{% block body %}

<!-- Home -->
<section class="support_view">
    <div class="container_view container_full_view">
      <div class="mt-3 flex-height d-flex flex-column justify-content-center">
        <div class="content_restituer_articles">
          <div class="info_articles p-3">
            <p><i class="fas fa-quote-right mr-1"></i>Après chaque sortie, je ramène le matériel à l'entrepôt.<br>
              Je scan mon article et je le dépose au bon emplacement.</p>
          </div>
          <div class="content_restituer_list_articles">
            <div class="table_container mt-5">

              <div class="table_container_color w-100 height_table_historique">
                <table class="table_articles">
                  <thead class="head_table_resistuer">
                    <tr>
                      <th>Liste de mes emprunts</th>

                    </tr>
                  </thead>
                  <tbody class="body_table_resituer">

                      <tr>

                        <th class="pl-4">
                        <p><i class="fas fa-boxes"></i></p>
                        <p>Pelles <span>x5</span> </p>
                        <p>emplacement: 12</p>
                        <div class="scan_articles_resituer">
                          <input type="text" name="" value="" required>
                          <button class="button_scan_restituer" type="button" name="button"><i class="fas fa-barcode"></i></button>
                        </div></th>
                      </tr>
                      <tr>
                        <th class="pl-4">
                        <p><i class="fas fa-boxes"></i></p>
                        <p>Tentes <span>x2</span> </p>
                        <p>emplacement: 13</p>
                        <div class="scan_articles_resituer">
                          <input type="text" name="" value="" required>
                          <button class="button_scan_restituer" type="button" name="button"><i class="fas fa-barcode"></i></button>
                        </div></th>
                      </tr>
                      <tr>
                        <th class="pl-4">
                        <p><i class="fas fa-boxes"></i></p>
                        <p>Piquet <span>x5</span> </p>
                        <p>emplacement: 14</p>
                        <div class="scan_articles_resituer">
                          <input type="text" name="" value="" required>
                          <button class="button_scan_restituer" type="button" name="button"><i class="fas fa-barcode"></i></button>
                        </div></th>
                      </tr>



                  </tbody>
                </table>
              </div>
            </div>
          </div>

        </div>

      </div>
    </div>
</section>
