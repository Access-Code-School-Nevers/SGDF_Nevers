{% extends 'base.html.twig' %}

{% block title %}Restituer{% endblock %}

{% block body %}

<!-- Home -->
<section class="support_view">
    <div id="containerElt" class="container_view">
      <div class="mt-3 flex-height d-flex flex-column justify-content-center">
        <div class="content_restituer_articles">
          <div class="centrer p-3">
            <p><i class="fas fa-quote-right mr-1"></i>Après chaque sortie, je ramène le matériel à l'entrepôt.<br>
              Je scan mon article et je le dépose au bon emplacement.</p>
          </div>
          <div class="content_restituer_list_articles">
            <div class="table_container mt-5">

              <div class="table_container_color w-100 height_table_historique">
                <table class="table_articles">
                  <thead class="head_table_resistuer">
                    <tr>
                      <th>Liste de mes emprunts</th>

                    </tr>
                  </thead>
                  <tbody class="body_table_restituer">

                        <tr class="bar-default" id="el1"><!-- rajouter la class "bar-success" lors de la validation -->
                            <th class="plr-6">
                              <div class="scan-in-progress"> <!-- par default "display: flex;" || rajouter la class "d-none" lors de la validation -->
                                <i class="fas fa-boxes"></i>
                                <div class="">
                                  <p>Article(s)<strong>id</strong> <strong>Quantité</strong> </p>

                                    <p>Pelle<strong class="pl-1">1</strong></p>

                                </div>
                                  <p class="quantity-articles">Quantité <span>2</span></p>
                                <div class="scan_articles_resituer">
                                  <input id="codebar1" data-id-required="1" class="input_style_restituer" type="text" name="codebar1" placeholder="CAB à scan : 1" oninput="verifyScan(this, 1)" required>
                                  <a onClick="initScan(1)" class="button-scan input_button">
                                      <div class="button_scan_restituer m-0"></div>
                                  </a>
                                </div>
                                <div class="check-box-success">
                                  <i class="fas fa-check check-success d-none"></i>
                                </div>
                              </div>
                          </th>
                        </tr>

                  </tbody>
                  <tfoot class="position-relative">
                     <tr>
                         <th scope="row"><div class="button_confirm_restituer">
                           <button class="button_style submit_search_article w-150px color_button" type="button" name="button">Restituer</button>
                         </div></th>
                     </tr>
                  </tfoot>
                </table>

              </div>
            </div>
          </div>

        </div>

      </div>
    </div>
</section>
<script src="/js/scan_articles.js"></script>
{% include 'components/footer.html.twig' %}
{% endblock %}
