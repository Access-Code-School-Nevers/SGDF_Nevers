{% block header %}
<!-- header -->
<header>
  <nav>
    <!-- Link to go back to previous page, hide on some pages when arrow variable is defined -->
    <div class="content_nav_left">
      {% if arrow is not defined %}
      <a href="./home"><i class="fas fa-arrow-left"></i></a> {% endif %}
    </div>
    
    <h1>{{title}}</h1>

    {% if Login is not defined %}
      <div class="dropdown">
        {% if app.user is not null and app.user.roles[0] == 'ROLE_RESPONSABLE' %}Bonjour Responsable Matériel{% endif %}
        {% if app.user is not null and app.user.roles[0] == 'ROLE_ADMIN' %}Bonjour Admin{% endif %}
        {% if app.user is not null and app.user.roles[0] == 'ROLE_CHEF' %}Bonjour Chef{% endif %}

        <i onclick="myFunction()" class="fas fa-user dropbtn"></i>

        <!-- Disconect link -->
        <div id="myDropdown" class="dropdown-content">
          <a href="/logout">Déconnexion</a>
        </div>
      </div>
    {% endif %}
  </nav>
</header>
{% endblock %}
